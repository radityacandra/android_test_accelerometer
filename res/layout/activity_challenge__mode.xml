<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.spcb2.Challenge_Mode" >
    
    <TextView
        android:id="@+id/labelPukulan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Pukulan Tersisa"
        android:textSize="@dimen/coba" />

    <TextView
        android:id="@+id/sisaPukulan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelPukulan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="200"
        android:textSize="@dimen/coba" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Waktu Tersisa"
        android:textSize="@dimen/coba" />

    <TextView
        android:id="@+id/sisaWaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="60"
        android:textSize="@dimen/coba" />

</RelativeLayout>
