<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.spcb2.Survival_Mode" >

    <TextView
        android:id="@+id/jumlahPukulan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Jumlah Pukulan"
        android:textSize="@dimen/coba" />

    <TextView
        android:id="@+id/angkaPukulan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jumlahPukulan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="0"
        android:textSize="@dimen/coba" />

    <TextView
        android:id="@+id/labelKalori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Kalori Terbakar"
        android:textSize="@dimen/coba" />

    <TextView
        android:id="@+id/angkaKalori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/angkaPukulan"
        android:layout_below="@+id/labelKalori"
        android:layout_marginTop="32dp"
        android:text="0"
        android:textSize="@dimen/coba" />
    
</RelativeLayout>
