<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainAccelerometer" >

    <TextView
        android:id="@+id/jumlahPukulan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="114dp"
        android:text="Score"
        android:textSize="@dimen/coba" />

    <TextView
        android:id="@+id/angkaScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/jumlahPukulan"
        android:layout_alignBottom="@+id/jumlahPukulan"
        android:layout_alignParentRight="true"
        android:layout_marginRight="29dp"
        android:text="angka_score"
        android:textSize="@dimen/coba" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:text="Beri aku pukulan terkerasmu..." />

    <Button
        android:id="@+id/ulang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/angkaScore"
        android:layout_marginTop="56dp"
        android:layout_toRightOf="@+id/jumlahPukulan"
        android:text="Ulangi" />
    
</RelativeLayout>